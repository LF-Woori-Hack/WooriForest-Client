<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">true</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
        <item name="iconTint">@android:color/transparent</item>
        <item name="iconTintMode">add</item>
    </style>

    <style name="ButtonStyle.Base" parent="BaseButtonStyle">
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/green</item>
    </style>

    <style name="ButtonRoundStyle" parent="BaseButtonStyle">
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="ButtonRoundStyle.Kakao" parent="ButtonRoundStyle">
        <item name="backgroundTint">#FFE812</item>
    </style>
</resources>